{
  "manifest_version": 2,
  "name": "Lorem Ipsum Checker",
  "version": "1.1",
  "description": "Quickly check if your site still has Lorem Ipsum leftover",
  "short_name": "Lorem Ipsum Checker",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}